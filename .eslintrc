{
  "root": true,
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "classes": true,
    "jsx": true,
    "modules": true
  },
  "rules": {
    "no-console": 1,
    "no-unused-vars": 1,
    "react/jsx-uses-react": 1,
    "react/react-in-jsx-scope": 2
  }
}
